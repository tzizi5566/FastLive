<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ccffffff"
    >

  <android.support.v7.widget.AppCompatCheckBox
      android:id="@+id/cb_switch"
      android:layout_width="wrap_content"
      android:layout_height="22dp"
      android:layout_margin="6dp"
      android:background="@drawable/chat_switch"
      android:button="@null"
      android:checked="false"
      android:gravity="center"
      android:padding="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <io.github.rockerhieu.emojicon.EmojiconEditText
      android:id="@+id/edt_chat"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:layout_marginBottom="8dp"
      android:background="@null"
      android:hint="和大家聊点什么吧"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/cb_switch"
      app:layout_constraintRight_toLeftOf="@+id/tv_send"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="HardcodedText"
      />

  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_send"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="6dp"
      android:padding="10dp"
      android:text="发送"
      android:textColor="#23BE9F"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="HardcodedText"
      />

</android.support.constraint.ConstraintLayout>