    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <com.kop.fastlive.widget.DanmuItemView
      android:id="@+id/danmu_view_0"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      />

  <com.kop.fastlive.widget.DanmuItemView
      android:id="@+id/danmu_view_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/danmu_view_0"
      />

  <com.kop.fastlive.widget.DanmuItemView
      android:id="@+id/danmu_view_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/danmu_view_1"
      />

  <com.kop.fastlive.widget.DanmuItemView
      android:id="@+id/danmu_view_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/danmu_view_2"
      />

